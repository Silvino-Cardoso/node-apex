  <div class="content">
    <img src="images/logo.png" class="logo" alt="">  
    <form method="POST" action="/cadastrar">
    
    <div class="form-group">
      
      <label for="exampleFormControlInput1">Nome da receita</label>
      <input type="text" class="form-control" name="recipeTitle">

    </div>
    <div class="form-group">
      
      <label for="exampleFormControlInput1">Digite URL de imagem Ilustrativa</label>
      <input type="text" class="form-control" name="image" >

    </div>
    
    <div class="form-group">
      <label>Ingredientes</label>
      <textarea class="form-control" rows="3" name="ingredients"> Digite os ingredientes da receita</textarea>
    </div>

    
    <div class="form-group">
      <label>Modo de Preparo</label>
      <textarea class="form-control" rows="3" name="directions"> Digite o modo de preparo da receita</textarea>
    </div>

    <div class="form-group">
      <label>Porção</label>
      <textarea class="form-control" rows="1"> Serve x pessoas</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar Receita</button>
  </form>

</div>

<div class="cards">
{{#each vetor}}

    <div class="card" >
      <img src="{{image}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{recipeTitle}}</h5>
      <a href="/details/{{id}}" class="btn btn-secondary"> Ver detalhes</a>
      <a href="/delete/{{id}}" class="btn btn-primary"> Excluir receita</a>
    </div>
  </div>

{{/each}}
</div>



